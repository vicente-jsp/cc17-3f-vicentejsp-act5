<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color (optional) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAE7E6"
                android:elevation="1000dp"/> <!-- Background color -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#d0bcb0"
                android:elevation="1000dp"/> <!-- Border color -->
            <corners
                android:elevation="1000dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>